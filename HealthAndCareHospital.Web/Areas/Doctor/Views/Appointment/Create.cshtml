@model ReceiptServiceModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<br>
<h4>Appointment</h4>
<hr />
<div class="row white">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-primary"></div>
            <div class="form-group">
                <label asp-for="@Model.PatientName" class="control-label"></label>
                <input readonly asp-for="@Model.PatientName" class="form-control" value="@Model.PatientName" />
                <span asp-validation-for="@Model.PatientName" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateTime" class="control-label"></label>
                <input required asp-for="@Model.DateTime" class="form-control" value="@Model.DateTime" />
                <span asp-validation-for="@Model.DateTime" class="text-primary"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="All">Back to List</a>
</div>

