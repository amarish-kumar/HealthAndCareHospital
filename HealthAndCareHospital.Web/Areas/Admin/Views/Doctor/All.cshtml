@model IEnumerable<DoctorViewModel>
@{
    ViewData["Title"] = "All";
}

<h2>Doctors</h2>
<hr />
<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<br>
@if (TempData["Message"] != null)
{
    <h2 class="white text-center text-capitalize">@TempData["Message"]</h2>
}
<table class="table white">
    <thead>
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            <th class="col-md-2">
                Department Name
            </th>
            <th class="col-md-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Speciality)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td class="col-md-4">
                    <a class="btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a class="btn-primary" asp-action="SetToRole" asp-route-id="@item.Id">Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

