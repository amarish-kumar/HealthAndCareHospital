@model IEnumerable<DiseaseServiceModel>

    @{
        ViewData["Title"] = "All Diseases";
    }
    <h2>@ViewData["Title"]</h2>
<br>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-action="All">Back to List</a>
    </div>
<br>
    <table class="table white">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Department Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var disease in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => disease.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => disease.Description)
                    </td>
                    <td>
                        <a class="btn btn-default" href="/departments/all/">@disease.DepartmentName</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
