        <div class="row">
            <div class="col-md-12">
                <h2 class="ser-title">Meet Our Doctors!</h2>
                <hr class="botm-line">
            </div>
            @foreach (var department in Model)
            {
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="thumbnail">
                        <img src="@department.ImageURL" alt="..." class="team-img">
                        <div class="caption">
                            <h3>@department.Name</h3>
                            <p>@department.Description</p>
                            <h4 class="text-left">Doctors:</h4>
                            @foreach (var doctor in department.Doctors)
                            {
                                <ul>
                                    <li>
                                        <a class="badge bg-primary" href="/departments/doctordetails/@doctor.Id">@doctor.Name</a>
                                    </li>
                                </ul>
                            }
                            <hr class="botm-line">
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
