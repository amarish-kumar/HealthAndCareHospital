@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "All Departments";
}
<h2>Deparments</h2>
<br>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<br>
<div class="col-md-12">
    @foreach (var department in Model)
    {
        <div class="card col-md-4 table-bordered">
            <img class="card-img-top img-thumbnail" src="@department.ImageURL" alt="Department Image">
            <div class="card-body white">
                <h3 class="card-title">@department.Name</h3>
                <p class="card-text">@department.Description</p>
                <h4 class="text-left">Doctors:</h4>
                @foreach (var doctor in department.Doctors)
                {
                    <ul>
                        <li>
                            <a class="badge bg-primary" href="/departments/doctordetails/@doctor.Id">@doctor.Name</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    }
</div>
<br>
<hr>
<section id="doctor-team" class="section-padding">
