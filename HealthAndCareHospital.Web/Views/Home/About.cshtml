@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>

<section id="about" class="section-padding">
    <div class="container white">
        <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="section-title">
                    <h2 class="head-title lg-line">Health And Care <br>Ultimate Dream</h2>
                    <hr class="botm-line">
                    <p class="sec-para">A multi-specialty quaternary care hospital,
                    it is indeed one of the cornerstones of the healthcare infrastructure in Sofia,
                    setting new benchmarks in quality standards in healthcare delivery.
                    Healt And Care Hospital provides holistic healthcare that includes prevention,
                    treatment, rehabilitation and health education for patients,
                    their families and clients by touching their lives.</p>
                    <a href="" style="color: #0cb8b6; padding-top:10px;">Know more..</a>
                </div>
            </div>
            <div class="col-md-9 col-sm-8 col-xs-12">
