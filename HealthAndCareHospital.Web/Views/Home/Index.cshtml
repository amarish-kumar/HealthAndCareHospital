@{ 
    Layout = "_LayoutHome";
}

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="banner-info">
            <div class="banner-logo text-center">
                <img src="~/Medilab/img/logo.png" class="img-responsive">
            </div>
            <div class="banner-text text-center">
                <h1 class="white">Health And Care Hospital</h1>
                <h2 class="white">We care about your healing!</h2>
                <br>
                <p>Our specialists are ready to take you<br>to a new level of helthcare!</p>
                <a href="/home/contact" class="btn btn-appoint">Contact Us.</a>
            </div>
            <div class="overlay-detail text-center">
                <a href="#"><i class="fa fa-angle-up"></i></a>
            </div>
        </div>
    </div>
</div>
<section id="cta-1" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="schedule-tab">
                <div class="col-md-4 col-sm-4 bor-left">
                    <div class="mt-boxy-color"></div>
                    <div class="medi-info">
                        <h3>Diseases Info</h3>
                        <p>You heard about a disease and not sure what is it. Learn more in our disease section...</p>
                        <a href="/Diseases/All" class="medi-info-btn">READ MORE</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="medi-info">
                        <h3>Medicines Info</h3>
                        <p>If you are interested in medicines and their usage, learn more about them in our medicines section...</p>
                        <a href="/Medicines/All" class="medi-info-btn">READ MORE</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 mt-boxy-3">
                    <div class="mt-boxy-color"></div>
                    <div class="time-info">
                        <h3>Opening Hours</h3>
                        <table style="margin: 8px 0px 0px;" border="1">
                            <tbody>
                                <tr>
                                    <td>Monday - Friday</td>
                                    <td>8.00 - 17.00</td>
                                </tr>
                                <tr>
                                    <td>Saturday</td>
                                    <td>9.30 - 17.30</td>
                                </tr>
                                <tr>
                                    <td>Sunday</td>
                                    <td>9.30 - 15.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

