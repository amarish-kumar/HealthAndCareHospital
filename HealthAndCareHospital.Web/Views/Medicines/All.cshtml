@model IEnumerable<MedicineServiceModel>
@{
    ViewData["Title"] = "All Medicines";
}
<h2>All Medicines</h2>
<br>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<table class="table white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dosage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descritption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dosage)
                </td>
                <td>
                    @(Html.DisplayFor(modelItem => item.Descritption).ToString().Substring(0 , 5))
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
